# Database Configuration
DATABASE_URL=postgres://rift26_user:rift26_secure_password@localhost:5432/rift26_db?sslmode=disable

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-256-bit-key-in-production

# Email/SMTP Configuration (for OTP emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=rift_support@pwioi.com
SMTP_PASSWORD=your-gmail-app-password-here
SMTP_FROM_EMAIL=rift_support@pwioi.com
SMTP_FROM_NAME=RIFT 2026 Support

# Server Configuration
PORT=8080
ENVIRONMENT=development

# Feature Flags
ENABLE_EMAIL_OTP=false  # Set to true to enable OTP verification (requires working SMTP)

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1

# Google Maps (Optional for venue embedding)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
OTP_RATE_LIMIT_MAX_ATTEMPTS=5
OTP_RATE_LIMIT_WINDOW_HOURS=1
SCAN_RATE_LIMIT_MAX_REQUESTS=1000
SCAN_RATE_LIMIT_WINDOW_MINUTES=1
